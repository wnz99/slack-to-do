{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "outDir": "./dist",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "incremental": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true //required by yup,
  },
  "include": [
    "src/**/*",
    "package.json",
    "__tests__",
    "serviceAccountKey.json"
  ],
  "references": []
}
